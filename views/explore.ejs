<!DOCTYPE html>
<html lang="en" class="dark scroll-smooth">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Neon Hub - Explore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: { sans: ['"Outfit"', 'sans-serif'] },
                    animation: {
                        'blob': 'blob 15s infinite',
                        'modal-pop': 'modalPop 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards',
                        'heart-beat': 'heartBeat 0.3s ease-in-out',
                    },
                    keyframes: {
                        blob: {
                            '0%': { transform: 'translate(0px, 0px) scale(1)' },
                            '33%': { transform: 'translate(30px, -50px) scale(1.1)' },
                            '66%': { transform: 'translate(-20px, 20px) scale(0.9)' },
                            '100%': { transform: 'translate(0px, 0px) scale(1)' },
                        },
                        modalPop: {
                            '0%': { opacity: '0', transform: 'scale(0.95) translateY(20px)' },
                            '100%': { opacity: '1', transform: 'scale(1) translateY(0)' },
                        },
                        heartBeat: {
                            '0%': { transform: 'scale(1)' },
                            '50%': { transform: 'scale(1.4)' },
                            '100%': { transform: 'scale(1)' },
                        }
                    }
                }
            }
        }
    </script>

    <style>
        body {
            background-color: #030712;
            background-image: radial-gradient(circle at 50% 0%, #1e1b4b 0%, #020617 80%);
            min-height: 100vh;
        }

        /* Sci-Fi Grid */
        .grid-bg {
            background-image: 
                linear-gradient(to right, rgba(99, 102, 241, 0.05) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(99, 102, 241, 0.05) 1px, transparent 1px);
            background-size: 40px 40px;
            mask-image: linear-gradient(to bottom, black 40%, transparent 100%);
        }

        /* High Performance Glass - Tweaked for better looks */
        .glass-panel {
            background: rgba(15, 23, 42, 0.7); /* Slightly darker for better contrast */
            backdrop-filter: blur(16px); /* Stronger blur */
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.1); /* Sharper border */
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.4);
        }

        /* 3D Tilt Logic */
        .card-container { perspective: 1000px; }
        .tilt-card {
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
            transform-style: preserve-3d;
            will-change: transform;
        }
        .tilt-card:hover {
            transform: translateY(-8px) scale(1.01);
            border-color: rgba(34, 211, 238, 0.4); /* Brighter border on hover */
            box-shadow: 0 20px 50px -10px rgba(34, 211, 238, 0.15);
        }

        /* Scroll Reveal Animation Classes */
        .reveal {
            opacity: 0;
            transform: translateY(40px);
            transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }
        .reveal.active {
            opacity: 1;
            transform: translateY(0);
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: #020617; }
        ::-webkit-scrollbar-thumb { background: #334155; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #475569; }
        
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>

<body class="text-slate-200 antialiased overflow-x-hidden selection:bg-cyan-500 selection:text-white">

    <div class="fixed inset-0 grid-bg pointer-events-none -z-20"></div>
    <div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
        <div class="absolute top-[-10%] left-[-10%] w-[600px] h-[600px] bg-indigo-600/10 rounded-full mix-blend-screen filter blur-[100px] animate-blob"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-[600px] h-[600px] bg-cyan-600/10 rounded-full mix-blend-screen filter blur-[100px] animate-blob animation-delay-2000"></div>
    </div>

    <header class="fixed top-0 left-0 w-full z-40 border-b border-white/5 bg-[#030712]/80 backdrop-blur-md transition-all duration-300">
        <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
            <a href="/" class="flex items-center gap-3 group">
                <div class="relative w-10 h-10 flex items-center justify-center bg-slate-800 rounded-xl border border-slate-700 group-hover:border-cyan-500 transition-colors shadow-lg shadow-cyan-900/20 overflow-hidden">
                    <div class="absolute inset-0 bg-cyan-500/20 blur-lg opacity-0 group-hover:opacity-100 transition-opacity"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white relative z-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>
                </div>
                <div class="hidden sm:block">
                    <h1 class="text-xl font-bold text-white tracking-tight leading-none">NEON HUB</h1>
                    <p class="text-[10px] text-cyan-500 font-mono tracking-widest uppercase">Decentralized Network</p>
                </div>
            </a>

            <a href="/profile" class="group relative px-6 py-2.5 rounded-full bg-slate-900 border border-slate-700 hover:border-cyan-500 transition-all duration-300 overflow-hidden shadow-lg">
                <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-cyan-500/10 to-transparent -translate-x-full group-hover:animate-shimmer"></div>
                <div class="flex items-center gap-3 relative z-10">
                    <span class="text-sm font-bold text-slate-200 group-hover:text-white">Profile</span>
                    <div class="w-6 h-6 rounded-full bg-slate-800 border border-slate-600 flex items-center justify-center overflow-hidden">
                        <svg class="w-3 h-3 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                    </div>
                </div>
            </a>
        </div>
    </header>

    <div class="fixed bottom-6 right-6 z-50 reveal active delay-1000">
        <div class="glass-panel px-4 py-2.5 rounded-xl flex items-center gap-3 border-l-4 border-l-cyan-500 hover:bg-slate-800/80 transition-colors shadow-2xl">
            <div class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
            </div>
            <div class="flex flex-col">
                <span class="text-[8px] font-bold text-slate-500 uppercase tracking-widest leading-none">System Load</span>
                <span id="visit-count" class="font-mono text-xs font-bold text-cyan-400 tracking-wide mt-0.5">
                    Users: <%= totalVisits %>
                </span>
            </div>
        </div>
    </div>

    <div class="pt-32 pb-24 px-6 relative z-10">
        
        <section class="max-w-5xl mx-auto text-center mb-20 reveal active">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-500/10 border border-purple-500/20 text-purple-300 text-[10px] font-bold uppercase tracking-widest mb-6">
                <span class="w-1.5 h-1.5 rounded-full bg-purple-400 animate-pulse"></span>
                Galactic Feed v3.6
            </div>

            <h1 class="text-5xl sm:text-7xl font-black mb-6 tracking-tight text-white leading-tight">
                Discover the <br />
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-300 via-blue-500 to-purple-500 drop-shadow-[0_0_30px_rgba(34,211,238,0.3)]">
                    Unknown Universe
                </span>
            </h1>
            
            <div class="flex flex-col sm:flex-row justify-center gap-4 mt-10">
                <a href="#posts" class="px-8 py-3.5 bg-slate-100 text-slate-900 rounded-xl font-bold hover:bg-white hover:scale-105 transition-all shadow-[0_0_20px_rgba(255,255,255,0.15)] flex items-center justify-center gap-2">
                    Explore Space
                </a>
                <a href="/newpost/create" class="px-8 py-3.5 glass-panel rounded-xl font-bold text-white hover:border-cyan-500/80 hover:text-cyan-300 hover:shadow-[0_0_15px_rgba(34,211,238,0.4)] transition-all flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                    New Signal
                </a>
            </div>
        </section>

        <div class="max-w-7xl mx-auto card-container" id="posts">
            
            <% if(data.length > 0){ %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                
                <% data.forEach((post, index) => { %>
                <textarea id="hidden-title-<%= post._id %>" class="hidden"><%= post.title %></textarea>
                <textarea id="hidden-content-<%= post._id %>" class="hidden"><%= post.content %></textarea>

                <article 
                    onclick="openModal('<%= post._id %>')"
                    class="reveal tilt-card group relative flex flex-col glass-panel rounded-3xl p-8 cursor-pointer overflow-hidden"
                    style=`transition-delay: <%= (index % 3) * 100 %>ms;`
                >
                    
                    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 via-transparent to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 group-hover:from-cyan-500/10 group-hover:to-purple-500/10"></div>

                    <div class="flex items-center gap-3 mb-6 relative z-10">
                        <div class="w-12 h-12 rounded-2xl bg-slate-800/80 flex items-center justify-center text-sm font-bold text-white border border-white/10 group-hover:border-cyan-500/50 transition-all shadow-inner overflow-hidden relative">
                            
                            <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=<%= post.user.username %>&backgroundColor=transparent" 
                                 loading="lazy" 
                                 alt="Cartoon Avatar"
                                 onload="this.classList.remove('opacity-0')"
                                 class="w-full h-full object-cover opacity-0 transition-all duration-700 group-hover:scale-110">
                        </div>
                        <div>
                            <h3 class="text-sm font-bold text-slate-200 group-hover:text-cyan-400 transition-colors">
                                @<%= post.user.username %>
                            </h3>
                            <p class="text-[10px] text-slate-500 font-mono uppercase tracking-wider flex items-center gap-1">
                                <span class="w-1 h-1 bg-green-500 rounded-full animate-pulse"></span> <%= post.user.name %>
                            </p>
                        </div>
                    </div>

                    <div class="flex-grow relative z-10 space-y-3">
                        <h2 class="text-xl font-bold text-white leading-snug group-hover:text-cyan-100 transition-colors">
                            <%= post.title.charAt(0).toUpperCase() + post.title.slice(1) %>
                        </h2>
                        <p class="text-slate-400 text-sm leading-relaxed line-clamp-3 font-light">
                            <%= post.content %>
                        </p>
                    </div>

                    <div class="mt-6 flex flex-wrap gap-2 relative z-10">
                        <% if(post.tags && post.tags.length > 0) { %>
                            <% post.tags.forEach(tag => { %>
                                <span class="px-2.5 py-1 bg-cyan-950/40 rounded-md text-[10px] font-bold text-cyan-300 border border-cyan-500/20 uppercase tracking-wider">
                                    #<%= tag %>
                                </span>
                            <% }) %>
                        <% } else { %>
                            <span class="px-2.5 py-1 bg-purple-950/40 rounded-md text-[10px] font-bold text-purple-300 border border-purple-500/20 uppercase tracking-wider">#UNIVERSE</span>
                            <span class="px-2.5 py-1 bg-blue-950/40 rounded-md text-[10px] font-bold text-blue-300 border border-blue-500/20 uppercase tracking-wider">#BLOG</span>
                        <% } %>
                    </div>

                    <div class="mt-6 pt-6 border-t border-white/5 flex items-center justify-between relative z-10">
                        <div class="flex items-center gap-2 text-xs font-mono text-slate-500 group-hover:text-cyan-400 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <%= timeAgo(post.date) %>
                        </div>

                        <button 
                            onclick="toggleLike(event, '<%= post._id %>')"
                            class="relative z-30 flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 hover:bg-slate-700 border border-white/5 hover:border-pink-500/30 transition-all group/btn"
                        >
                            <svg class="like-icon w-4 h-4 transition-transform group-active/btn:scale-75 <%= (typeof user !== 'undefined' && user && post.likes.includes(user._id)) ? 'text-pink-500 fill-pink-500' : 'text-slate-500 fill-none' %>" 
                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z" />
                            </svg>
                            <span id="like-count-<%= post._id %>" class="text-xs font-bold text-slate-400 group-hover/btn:text-white">
                                <%= post.likes.length %>
                            </span>
                        </button>
                    </div>
                    
                    <div class="absolute bottom-6 right-6 opacity-0 group-hover:opacity-100 transform translate-x-4 group-hover:translate-x-0 transition-all duration-300 pointer-events-none">
                        <svg class="w-5 h-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
                    </div>
                </article>
                <% }) %>

            </div>
            <% } else { %>
                <div class="flex flex-col items-center justify-center py-32 border-2 border-dashed border-slate-800 rounded-3xl bg-slate-900/30 text-center reveal active">
                    <div class="w-20 h-20 bg-slate-800 rounded-full flex items-center justify-center mb-6 shadow-inner">
                        <svg class="w-10 h-10 text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"/></svg>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">No Signals Found</h3>
                    <p class="text-slate-500 font-mono mb-8">The network sector is currently empty.</p>
                    <a href="/newpost/create" class="px-6 py-3 bg-cyan-600 hover:bg-cyan-500 text-white rounded-lg font-bold shadow-lg shadow-cyan-500/20 transition-all">Initialize Transmission</a>
                </div>
            <% } %>

            <footer class="mt-32 text-center border-t border-white/5 pt-10 reveal">
                <p class="text-xs text-slate-600 font-mono tracking-widest uppercase">
                    Not Just a Blog By - Aman Tiwari
                </p>
                <p class="text-xs text-slate-600 font-mono tracking-widest uppercase">
                    <%= new Date().toDateString()%>
                </p>
            </footer>
        </div>
    </div>

    <div id="modalBackdrop" class="fixed inset-0 bg-black/90 backdrop-blur-md z-50 hidden transition-opacity duration-300" onclick="closeModal()"></div>

    <div id="readModal" class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-2xl z-[60] hidden">
        <div class="bg-slate-950 border border-cyan-500/30 shadow-[0_0_100px_rgba(34,211,238,0.15)] rounded-3xl p-10 relative animate-modal-pop mx-4 overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-cyan-500 to-transparent"></div>
            <div class="absolute -bottom-20 -right-20 w-64 h-64 bg-cyan-500/5 rounded-full blur-3xl"></div>

            <button onclick="closeModal()" class="absolute top-6 right-6 text-slate-500 hover:text-white bg-white/5 hover:bg-white/10 rounded-full p-2 transition-colors z-10">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
            </button>

            <div class="relative z-10">
                <h2 id="modalTitle" class="text-3xl sm:text-4xl font-black text-white mb-8 leading-tight"></h2>
                <div class="max-h-[60vh] overflow-y-auto pr-4 custom-scrollbar">
                    <p id="modalContent" class="text-slate-300 leading-8 text-lg font-light whitespace-pre-wrap"></p>
                </div>
                <div class="mt-10 pt-6 border-t border-white/10 flex justify-end">
                    <button onclick="closeModal()" class="px-8 py-2.5 rounded-xl bg-slate-100 text-black hover:bg-white font-bold text-sm transition-colors shadow-lg">Close Signal</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // --- Scroll Reveal Observer ---
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

        // --- Standard Logic ---
        const backdrop = document.getElementById('modalBackdrop');
        const readModal = document.getElementById('readModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalContent = document.getElementById('modalContent');

        function openModal(id) {
            const title = document.getElementById('hidden-title-' + id).value;
            const content = document.getElementById('hidden-content-' + id).value;
            modalTitle.textContent = title;
            modalContent.textContent = content;
            backdrop.classList.remove('hidden');
            readModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            backdrop.classList.add('hidden');
            readModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        async function toggleLike(event, postId) {
            event.stopPropagation();
            const btn = event.currentTarget;
            const icon = btn.querySelector('svg');
            const countSpan = document.getElementById(`like-count-${postId}`);
            
            icon.classList.add('animate-heart-beat');
            setTimeout(() => icon.classList.remove('animate-heart-beat'), 300);

            try {
                const res = await fetch(`/newpost/like/${postId}`, { 
                    method: "POST",
                    headers: { "Content-Type": "application/json" }
                });
                const data = await res.json();
                countSpan.innerText = data.likesCount;
                if (data.liked) {
                    icon.classList.remove('text-slate-500', 'fill-none');
                    icon.classList.add('text-pink-500', 'fill-pink-500');
                } else {
                    icon.classList.remove('text-pink-500', 'fill-pink-500');
                    icon.classList.add('text-slate-500', 'fill-none');
                }
            } catch (err) { console.error("Like failed", err); }
        }

        async function updateCounter() {
            try {
                const response = await fetch("/api/total-visits");
                const data = await response.json();
                document.getElementById("visit-count").innerText = `Users: ${data.count}`;
            } catch (err) { console.error("Signal Lost", err); }
        }
        setInterval(updateCounter, 5000);

        const deviceId = localStorage.getItem("deviceId");
        if(deviceId) {
            fetch("/track/track", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ deviceId })
            }).catch(err => console.error(err));
        }
    </script>
</body>
</html>