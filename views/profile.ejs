<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Neon Blog - Ultra Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: { sans: ['"Outfit"', 'sans-serif'] },
                    animation: {
                        'blob': 'blob 7s infinite',
                        'fade-in-up': 'fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards',
                        'shimmer': 'shimmer 2.5s linear infinite',
                        'modal-in': 'modalIn 0.3s cubic-bezier(0.16, 1, 0.3, 1) forwards',
                        'spin-slow': 'spin 8s linear infinite',
                    },
                    keyframes: {
                        blob: {
                            '0%': { transform: 'translate(0px, 0px) scale(1)' },
                            '33%': { transform: 'translate(30px, -50px) scale(1.1)' },
                            '66%': { transform: 'translate(-20px, 20px) scale(0.9)' },
                            '100%': { transform: 'translate(0px, 0px) scale(1)' },
                        },
                        fadeInUp: {
                            '0%': { opacity: '0', transform: 'translateY(20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                        shimmer: {
                            '0%': { backgroundPosition: '-1000px 0' },
                            '100%': { backgroundPosition: '1000px 0' }
                        },
                        modalIn: {
                            '0%': { opacity: '0', transform: 'scale(0.95) translateY(10px)' },
                            '100%': { opacity: '1', transform: 'scale(1) translateY(0)' }
                        }
                    }
                }
            }
        }
    </script>

    <style>
        body {
            background-color: #030712;
            background-image: 
                linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px), 
                linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
            background-size: 40px 40px;
        }
        .glass-panel {
            background: rgba(17, 24, 39, 0.7);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        .post-card { opacity: 0; animation: fadeInUp 0.6s ease-out forwards; }
        .post-card:nth-child(1) { animation-delay: 0.1s; }
        .post-card:nth-child(2) { animation-delay: 0.2s; }
        .post-card:nth-child(3) { animation-delay: 0.3s; }
        .custom-scrollbar::-webkit-scrollbar { width: 6px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: #1f2937; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #4b5563; border-radius: 10px; }
    </style>
</head>

<body class="text-gray-200 antialiased min-h-screen relative overflow-x-hidden selection:bg-fuchsia-500 selection:text-white">

    <% 
        let totalLikes = 0;
        if(data.posts && data.posts.length > 0) {
            data.posts.forEach(post => {
                totalLikes += post.likes.length;
            });
        }
    %>

    <div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-purple-600/20 rounded-full mix-blend-screen filter blur-[120px] animate-blob"></div>
        <div class="absolute top-0 right-1/4 w-96 h-96 bg-cyan-600/20 rounded-full mix-blend-screen filter blur-[120px] animate-blob animation-delay-2000"></div>
    </div>

    <div class="max-w-7xl mx-auto p-6 space-y-12 pb-20 relative z-10">

        <nav class="flex justify-between items-center animate-fade-in-up">
            <a href="/" class="group relative px-6 py-3 font-bold text-white rounded-full bg-slate-900 border border-slate-700 hover:border-cyan-500 transition-all duration-300 overflow-hidden shadow-lg shadow-cyan-900/20">
                <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-cyan-500/10 to-transparent -translate-x-full group-hover:animate-shimmer"></div>
                <div class="flex items-center gap-3 relative z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-cyan-400 group-hover:rotate-12 transition-transform" viewBox="0 0 24 24" fill="currentColor"><path d="M21 13v10h-21v-19h12v2h-10v15h17v-8h2zm3-12h-10.988l4.035 4-6.977 7.07 2.828 2.828 6.977-7.07 4.125 4.172v-11z"/></svg>
                    <span class="tracking-wide">NEON HUB</span>
                </div>
            </a>
            <a href="/logout" class="text-sm font-semibold text-red-400 hover:text-red-300 transition-colors px-4 py-2 hover:bg-red-500/10 rounded-xl border border-transparent hover:border-red-500/20">
                Logout
            </a>
        </nav>

        <header class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <section class="lg:col-span-5 relative group animate-fade-in-up" style="animation-delay: 0.1s;">
                <div class="absolute -inset-0.5 bg-gradient-to-r from-pink-600 to-purple-600 rounded-[2rem] blur opacity-30 group-hover:opacity-60 transition duration-500"></div>
                
                <div class="relative h-full bg-slate-900/90 rounded-[1.9rem] overflow-hidden border border-white/10 shadow-2xl backdrop-blur-xl">
                    <div class="h-32 bg-gradient-to-r from-violet-900 via-slate-900 to-black relative overflow-hidden">
                        <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20"></div>
                        <div class="absolute top-4 left-4 z-20">
                            <button onclick="openProfileModal()" class="p-2 bg-black/40 hover:bg-indigo-500 rounded-full text-white backdrop-blur-md transition-all border border-white/10 group/edit hover:rotate-90">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </button>
                        </div>
                        <div class="absolute top-4 right-4">
                             <span class="px-3 py-1 bg-black/40 backdrop-blur-md rounded-full text-[10px] font-mono border border-white/10 uppercase tracking-widest text-cyan-400 shadow-lg">
                                ID: <%= data.username.toUpperCase() %>
                             </span>
                        </div>
                    </div>

                    <div class="px-8 pb-8 relative">
                        <div class="relative -mt-16 mb-4 w-32 h-32 mx-auto group/avatar cursor-pointer">
                            <div class="absolute inset-0 rounded-full border-[3px] border-dashed border-cyan-500/40 animate-spin-slow"></div>
                            <img src="https://i.pravatar.cc/150?img=12" class="w-full h-full rounded-full border-4 border-slate-900 object-cover shadow-2xl relative z-10 group-hover/avatar:scale-105 transition-transform duration-300">
                        </div>

                        <div class="text-center mb-6">
                            <h1 class="text-3xl font-bold text-white tracking-tight">
                                <%= data.name.charAt(0).toUpperCase() + data.name.slice(1) %>
                            </h1>
                            <p class="text-indigo-400 text-sm font-mono tracking-wide mt-1">@<%= data.username %></p>
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-6">
                            <div class="bg-slate-800/40 p-3 rounded-2xl border border-white/5 text-center">
                                <p class="text-[10px] uppercase text-slate-500 font-bold tracking-widest mb-1">Level (Age)</p>
                                <p class="text-2xl font-bold text-white"><%= data.age %></p>
                            </div>
                            <div class="bg-slate-800/40 p-3 rounded-2xl border border-white/5 text-center">
                                <p class="text-[10px] uppercase text-slate-500 font-bold tracking-widest mb-1">Reputation</p>
                                <p class="text-2xl font-bold text-pink-400"><%= totalLikes %></p>
                            </div>
                        </div>

                        <div class="space-y-3 bg-black/20 p-4 rounded-2xl border border-white/5">
                            <div class="flex items-center gap-4">
                                <div class="p-2.5 bg-slate-800 rounded-xl text-slate-400">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                                </div>
                                <div class="overflow-hidden">
                                    <p class="text-[10px] text-slate-500 uppercase font-bold tracking-wider">Comm-Link</p>
                                    <p class="text-sm text-slate-200 truncate font-medium"><%= data.email %></p>
                                </div>
                            </div>
                            <div class="flex items-center gap-4">
                                <div class="p-2.5 bg-slate-800 rounded-xl text-slate-400">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
                                </div>
                                <div>
                                    <p class="text-[10px] text-slate-500 uppercase font-bold tracking-wider">Frequency</p>
                                    <p class="text-sm text-slate-200 font-medium"><%= data.phone %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="lg:col-span-7 glass-panel rounded-3xl p-1 bg-gradient-to-br from-slate-800 to-slate-900 animate-fade-in-up shadow-2xl" style="animation-delay: 0.2s;">
                <div class="bg-slate-900/95 rounded-[22px] p-8 h-full flex flex-col justify-center border border-white/5">
                    <h2 class="text-2xl font-bold mb-8 text-indigo-400 flex items-center gap-3">
                        <span class="w-1.5 h-8 bg-gradient-to-b from-cyan-400 to-indigo-500 rounded-full shadow-[0_0_10px_#6366f1]"></span>
                        Initiate Transmission
                    </h2>
                    <form action="/newpost" method="POST" class="space-y-6">
                        <div class="relative group">
                            <input name="title" type="text" placeholder="Subject Line" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-5 py-4 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none text-white transition-all shadow-inner placeholder-slate-600" />
                        </div>
                        <textarea name="content" rows="4" placeholder="Enter system data stream..." class="w-full bg-slate-950 border border-slate-700 rounded-xl px-5 py-4 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none text-white transition-all shadow-inner resize-none placeholder-slate-600"></textarea>
                        
                        <div class="flex justify-end">
                            <button type="submit" class="bg-indigo-600 hover:bg-indigo-500 px-10 py-3 rounded-xl font-bold text-white transition-all shadow-[0_0_20px_rgba(79,70,229,0.3)] hover:shadow-[0_0_30px_rgba(79,70,229,0.5)] transform hover:-translate-y-1 active:scale-95 flex items-center gap-2">
                                UPLOAD
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </header>

        <main>
            <% if (data.posts.length > 0) { %>
            <div class="flex items-end justify-between mb-8 border-b border-slate-800 pb-4">
                <h2 class="text-3xl font-bold text-white">Incoming Feeds</h2>
                <div class="flex items-center gap-2 bg-red-500/10 px-3 py-1 rounded-full border border-red-500/20">
                     <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse shadow-[0_0_10px_#ef4444]"></span>
                     <span class="text-[10px] font-bold text-red-400 uppercase tracking-widest">Live Signal</span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% data.posts.forEach(post => { %>
                
                <article id="post-<%= post._id %>" 
                    onclick="openModal('<%= post._id %>')"
                    class="post-card group relative bg-slate-900/40 backdrop-blur-md rounded-2xl p-6 border border-white/5 hover:border-indigo-500/50 cursor-pointer transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-indigo-500/10 flex flex-col h-full">
                    
                    <textarea id="hidden-title-<%= post._id %>" class="hidden"><%= post.title %></textarea>
                    <textarea id="hidden-content-<%= post._id %>" class="hidden"><%= post.content %></textarea>

                    <div class="flex justify-between items-start mb-4">
                        <h2 class="text-lg font-bold text-slate-100 group-hover:text-indigo-400 transition-colors truncate pr-4">
                            <%= post.title.charAt(0).toUpperCase() + post.title.slice(1) %>
                        </h2>
                        
                        <div class="flex gap-2" onclick="event.stopPropagation()">
                             <button onclick="openEditModal('<%= post._id %>')" 
                                class="p-2 bg-slate-800 hover:bg-amber-500/20 text-slate-400 hover:text-amber-500 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </button>

                            <button onclick="deletePost(event, '<%= post._id %>')" class="p-2 bg-slate-800 hover:bg-red-500/20 text-slate-400 hover:text-red-500 rounded-lg transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <p class="text-slate-400 text-sm leading-relaxed line-clamp-3 mb-6 pointer-events-none flex-grow">
                        <%= post.content %>
                    </p>

                    <div class="flex items-center justify-between mt-auto pt-4 border-t border-slate-800">
                        <span class="text-xs text-slate-600 font-mono"><%= timeAgo(post.date) %></span>
                    </div>
                </article>
                <% }) %>
            </div>
            <% } else { %>
                <div class="flex flex-col items-center justify-center py-24 border-2 border-dashed border-slate-800 rounded-3xl bg-slate-900/20">
                    <p class="text-slate-500 font-mono">No signals detected.</p>
                </div>
            <% } %>
        </main>
    </div>

    <div id="modalBackdrop" class="fixed inset-0 bg-black/80 backdrop-blur-md z-40 hidden transition-opacity duration-300" onclick="closeModal()"></div>

    <div id="readModal" class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-2xl z-50 hidden">
        <div class="bg-slate-900 border border-slate-700 shadow-[0_0_50px_rgba(79,70,229,0.3)] rounded-2xl p-8 relative animate-modal-in mx-4">
            <button onclick="closeModal()" class="absolute top-4 right-4 text-slate-500 hover:text-white bg-slate-800 rounded-full p-2 hover:rotate-90 transition-transform">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
            </button>
            <h2 id="modalTitle" class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400 mb-6"></h2>
            <div class="max-h-[60vh] overflow-y-auto pr-2 custom-scrollbar">
                <p id="modalContent" class="text-slate-300 leading-8 text-lg font-light whitespace-pre-wrap"></p>
            </div>
        </div>
    </div>

    <div id="editModal" class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-2xl z-50 hidden">
        <div class="bg-slate-900 border border-amber-500/30 shadow-[0_0_50px_rgba(245,158,11,0.15)] rounded-2xl p-8 relative animate-modal-in mx-4">
            <h2 class="text-2xl font-bold text-amber-500 mb-6 flex items-center gap-2">Edit Transmission</h2>
            <form id="editForm" method="POST" action="#">
                <div class="space-y-4">
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Title</label>
                        <input type="text" id="editTitleInput" name="title" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-amber-500 outline-none transition-colors">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Content</label>
                        <textarea id="editContentInput" name="content" rows="6" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-amber-500 outline-none resize-none transition-colors"></textarea>
                    </div>
                </div>
                <div class="mt-8 flex justify-end gap-3">
                    <button type="button" onclick="closeModal()" class="px-6 py-2 rounded-xl text-slate-400 hover:text-white transition-colors">Cancel</button>
                    <button type="submit" class="px-6 py-2 rounded-xl bg-amber-600 hover:bg-amber-500 text-white font-bold shadow-lg shadow-amber-500/20 transition-all hover:-translate-y-0.5">Update Signal</button>
                </div>
            </form>
        </div>
    </div>

    <div id="profileModal" class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-lg z-50 hidden">
        <div class="bg-slate-900 border border-indigo-500/30 shadow-[0_0_50px_rgba(99,102,241,0.2)] rounded-2xl p-8 relative animate-modal-in mx-4">
            <h2 class="text-2xl font-bold text-indigo-400 mb-6">System Configuration</h2>
            <form action="/updateProfile/<%= data._id %>" method="POST">
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Name</label>
                            <input type="text" name="name" value="<%= data.name %>" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-indigo-500 outline-none transition-colors">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Age</label>
                            <input type="number" name="age" value="<%= data.age %>" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-indigo-500 outline-none transition-colors">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Email</label>
                        <input type="email" name="email" value="<%= data.email %>" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-indigo-500 outline-none transition-colors">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Phone</label>
                        <input type="text" name="phone" value="<%= data.phone %>" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-indigo-500 outline-none transition-colors">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Username</label>
                        <input type="text" name="username" value="<%= data.username %>" class="w-full bg-slate-950 border border-slate-700 rounded-xl px-4 py-3 text-white focus:border-indigo-500 outline-none transition-colors">
                    </div>
                </div>
                <div class="mt-8 flex justify-end gap-3">
                    <button type="button" onclick="closeModal()" class="px-6 py-2 rounded-xl text-slate-400 hover:text-white transition-colors">Cancel</button>
                    <button type="submit" class="px-6 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-500 text-white font-bold transition-all hover:-translate-y-0.5">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const backdrop = document.getElementById('modalBackdrop');
        const readModal = document.getElementById('readModal');
        const editModal = document.getElementById('editModal');
        const profileModal = document.getElementById('profileModal');
        
        const modalTitle = document.getElementById('modalTitle');
        const modalContent = document.getElementById('modalContent');
        const editForm = document.getElementById('editForm');
        const editTitleInput = document.getElementById('editTitleInput');
        const editContentInput = document.getElementById('editContentInput');

        // --- FUNCTIONS ---

        function openModal(id) {
            const title = document.getElementById('hidden-title-' + id).value;
            const content = document.getElementById('hidden-content-' + id).value;

            modalTitle.textContent = title;
            modalContent.textContent = content;
            
            backdrop.classList.remove('hidden');
            readModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function openEditModal(id) {
            const title = document.getElementById('hidden-title-' + id).value;
            const content = document.getElementById('hidden-content-' + id).value;

            editTitleInput.value = title;
            editContentInput.value = content;
            editForm.action = `/newpost/update/${id}`; 
            
            backdrop.classList.remove('hidden');
            editModal.classList.remove('hidden');
            readModal.classList.add('hidden'); 
            document.body.style.overflow = 'hidden';
        }

        async function deletePost(e, id) {
            e.stopPropagation(); // Stop click from bubbling to article modal
            if(!confirm("Delete this signal?")) return;
            
            try {
                const res = await fetch(`/newpost/posts/${id}`, { method: 'DELETE' });
                const data = await res.json();
                
                if(data.success) {
                    const article = document.getElementById(`post-${id}`);
                    if(article) {
                        article.style.transition = "all 0.5s ease";
                        article.style.transform = "scale(0) rotate(10deg)";
                        article.style.opacity = "0";
                        setTimeout(() => article.remove(), 500);
                    }
                }
            } catch (error) {
                console.error('Error deleting post:', error);
            }
        }

        function openProfileModal() {
            backdrop.classList.remove('hidden');
            profileModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            backdrop.classList.add('hidden');
            readModal.classList.add('hidden');
            editModal.classList.add('hidden');
            profileModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    </script>
